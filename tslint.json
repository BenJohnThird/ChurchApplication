{
    "extends": "tslint:recommended",
    "rulesDirectory": [
        "codelyzer"
    ],
    "rules": {
        "array-type": false,
        "arrow-parens": false,
        "deprecation": {
            "severity": "warn"
        },
        "import-blacklist": [
            true,
            "rxjs/Rx",
            "primeng/primeng",
            "ngx-bootstrap",
            "primeng/components/common/api",
            "primeng/components/common/messageservice",
            "@angular/router/src/shared",
            "@angular/router/src/router_state",
            "@angular/forms/src/directives/validators",
            "lodash.clonedeep",
            "util"
        ],
        "interface-name": false,
        "max-classes-per-file": false,
        "max-line-length": [
            true,
            {
                "limit": 120,
                "ignore-pattern": "^import |^export | implements "
            }
        ],
        "member-access": true,
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "no-consecutive-blank-lines": false,
        "no-console": [
            true,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace",
            "log"
        ],
        "no-empty": false,
        "no-inferrable-types": [
            true,
            "ignore-params"
        ],
        "no-non-null-assertion": true,
        "no-redundant-jsdoc": false,
        "no-switch-case-fall-through": true,
        "no-use-before-declare": true,
        "no-var-requires": false,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "object-literal-shorthand": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "prefer-for-of": false,
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": false,
        "no-output-on-prefix": false,
        "use-input-property-decorator": true,
        "use-output-property-decorator": true,
        "use-host-property-decorator": true,
        "no-input-rename": true,
        "no-output-rename": true,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "component-class-suffix": true,
        "directive-class-suffix": true,
        "typedef": [
            true,
            "call-signature",
            "parameter"
        ],
        "whitespace": [
            true,
            "check-module"
        ],
        "forin": false,
        "newline-per-chained-call": true,
        "variable-name": [
            true,
            "allow-leading-underscore"
        ]
    }
}
